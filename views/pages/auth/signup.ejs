<%- include('../../partials/head.ejs'); %>

<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>
            <div class="col-lg-8">
                <div class="section-title mb-5">
                    <h2>Create a new account</h2>
                    <p class="text-danger">All fields are required</p>
                </div>
                <form method="post" action="" id="user-sign">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" class="form-control form-control-lg" required />
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="username">Username (Must be unique)</label>
                            <input type="text" id="username" name="username" class="form-control form-control-lg" required />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label for="email">Email (Must be unique)</label>
                            <input type="email" id="email" name="email" class="form-control form-control-lg" required />
                        </div>
                        <div class="col-md-12 form-group">
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" class="form-control form-control-lg" required />
                        </div>

                        <div class="col-md-12 form-group">
                            <label for="confirm_password">Confirm Password</label>
                            <input type="password" id="confirm_password" name="confirm_password" class="form-control form-control-lg" required />
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-12">
                            <input type="submit" value="Sign Up" class="btn btn-primary py-3 px-5" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-2"></div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function(){
        $('#user-sign').validate({
            rules : {
                password : {
                    minlength : 6
                },
                confirm_password : {
                    minlength : 6,
                    equalTo : "#password"
                }
            }
        });
    });

</script>

